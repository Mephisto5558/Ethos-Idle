{
  "name": "ethos_idle_clone",
  "version": "0.0.1",
  "description": "Clone of an idle game I found on Google PlayStore",
  "keywords": [
    "idle",
    "game",
    "clone"
  ],
  "homepage": "https://github.com/Mephisto5558/EthosIdle_Clone#readme",
  "bugs": {
    "url": "https://github.com/Mephisto5558/EthosIdle_Clone/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mephisto5558/EthosIdle_Clone.git"
  },
  "license": "MIT",
  "author": "Mephisto5558",
  "type": "module",
  "main": "ts/index.ts",
  "types": "globals.d.ts",
  "scripts": {
    "build": "npm-run-all --parallel build:**",
    "build:css": "esbuild css/**/*.css --bundle --minify --outdir=min/css",
    "build:js": "esbuild ts/**/*.ts --bundle --minify --sourcemap --sources-content=false --outdir=min/js",
    "watch": "npm-run-all --parallel watch:**",
    "watch:css": "npm run build:css -- --watch",
    "watch:js": "npm run build:js -- --watch"
  },
  "devDependencies": {
    "@mephisto5558/eslint-config": "github:Mephisto5558/ESLint-Config",
    "esbuild": "^0.27.1",
    "npm-run-all2": "^8.0.4"
  },
  "engines": {
    "node": ">=22.12.0"
  }
}
